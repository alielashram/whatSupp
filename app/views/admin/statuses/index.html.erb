<div class="page-header">
  <h1>Supplication Feed</h1>
</div>

<%= link_to "Post a New Supplication", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
      <%= image_tag status.user.gravatar_url %>
  <strong><%= status.user.profile_name %></strong>
  <p><%= status.supplication %></p>
  <div class="meta">
        <%= time_ago_in_words(status.created_at) + " ago" %>
    <% if status.user == current_user %>
      <span class="admin">
        <%= link_to "Edit", edit_status_path(status) %> |
        <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this supplication?"} %>
      </span>
    <% end %>
  </div>
</div>
<% end %>
